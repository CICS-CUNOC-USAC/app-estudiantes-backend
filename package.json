{
  "name": "app-estudiantes-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "deploy": "NODE_ENV=production npm run build && npm run migrate:production && npm run seed:production && serverless deploy",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "knex": "knex --knexfile knexfile.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate:create": "npm run knex migrate:make -- -x ts",
    "migrate:production": "NODE_ENV=production npx knex --knexfile ./dist/knexfile.js migrate:latest",
    "migrate:undo:batch": "npm run knex migrate:rollback --all",
    "migrate:undo": "npm run knex migrate:down",
    "migrate:refresh:seed": "npm run migrate:undo:batch && npm run migrate && npm run seed",
    "migrate:refresh": "npm run migrate:undo:batch && npm run migrate",
    "migrate": "npm run knex migrate:latest",
    "offline": "npm run build && sls offline",
    "seed:create": "npm run knex seed:make -- -x ts",
    "seed:production": "NODE_ENV=production npx knex --knexfile ./dist/knexfile.js seed:run",
    "seed": "npm run knex seed:run",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "start": "nest start",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.445.0",
    "@casl/ability": "^6.7.3",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mapped-types": "2.0.2",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/swagger": "^7.1.13",
    "@types/aws-lambda": "^8.10.126",
    "@types/multer": "^1.4.9",
    "@vendia/serverless-express": "^4.10.4",
    "aws-lambda": "^1.0.7",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "knex": "^3.0.1",
    "lodash-es": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "objection": "^3.1.2",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "serverless-offline": "^13.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/lodash-es": "^4.17.9",
    "@types/node": "^20.8.3",
    "@types/passport-jwt": "^3.0.10",
    "@types/passport-local": "^1.0.36",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
